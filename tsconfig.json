{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2018",
    "strict": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error",
    "importHelpers": true,
    "noEmitHelpers": true,
    "lib": [
      "ES2018"
    ],
    "types": [
      "jest",
      "node",
      "wrap-ansi"
    ],
    "outDir": "target/js",
    "sourceMap": true,
    "newLine": "LF"
  },
  "include": [
    "src/**/*"
  ]
}
