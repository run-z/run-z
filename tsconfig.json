{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2022",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noImplicitOverride": true,
    "lib": ["ES2022"],
    "types": ["cross-spawn", "node"],
    "skipLibCheck": true,
    "outDir": "target/js",
    "rootDir": "./src",
    "sourceMap": true,
    "newLine": "LF"
  },
  "include": ["src/**/*"]
}
